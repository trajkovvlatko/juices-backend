<p id="notice"><%= notice %></p>

<h3>Listing ingredients</h3>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Measurement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.measurement %></td>
        <td><%= link_to 'Show', admin_panel_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Edit', edit_admin_panel_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', admin_panel_ingredient_path(ingredient), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_admin_panel_ingredient_path, class: 'btn btn-primary', role: 'button' %>
