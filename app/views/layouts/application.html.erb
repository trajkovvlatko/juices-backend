<!DOCTYPE html>
<html>
  <head>
    <title>JuicesBackend</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body class="container">
    <% if notice %>
      <div class="alert alert-success" role="alert">
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <% if admin_signed_in? %>
      <nav class="row navbar navbar-expand-lg">
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'Recipes', admin_panel_recipes_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Categories', admin_panel_categories_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Tags', admin_panel_tags_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Ingredients', admin_panel_ingredients_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Logout', destroy_admin_session_path, method: :delete, class: "nav-link" %>        
            </li>
          </ul>
        </div>
      </nav>
    <% end %>

    <%= yield %>
  </body>
</html>
